<header class="page-header">
    <h1>Register</h1>
</header>

<div>

    <%= form_for @user do |f| %>

        <div class="field">
            <%= label_tag :email %> <br/>
            <%= text_field_tag :email, params[:email] %>
        </div>
        <br>
        <div class="field">
            <%= label_tag :first_name %> <br/>
            <%= text_field_tag :first_name, params[:first_name] %>
        </div>
        <br>
        <div class="field">
            <%= label_tag :last_name %> <br/>
            <%= text_field_tag :last_name, params[:last_name] %>
        </div>
        <br>
        <div class="field"><b>Password</b>
            <% label_tag :password %> <br/>
            <%= password_field_tag :password, params[:password] %>
        </div>
        <br>
        <div class="field"><b>Confirm Password</b>
            <% label_tag :password_confirmation %> <br/>
            <%= password_field_tag :password, params[:password_confirmation] %>
        </div>
        <br>
        <div class="actions"><%= submit_tag "Register" %>
        </div>

        <% end %>

</div>